  <div class="container">
    <div class="row">
      <div class="col">
        <div class= "d-flex justify-content-center align-items-center" style="min-height: 150px">
          <h1>Add a movie to.... <strong>"<%= @list.name %> "</strong></h1>
        </div>

        <%= simple_form_for([@list, @bookmark]) do |f| %>
          <%= f.association :movie, collection: @movies, prompt: "Choose a movie" %>
          <%= f.input :comment %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
